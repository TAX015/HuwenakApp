<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_day"
    tools:context=".ui.laporan.DayFragment">

    <RelativeLayout
        android:id="@+id/day_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/huwenak_brown"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_daydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Tgl : 31 Januari 2021"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_daydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_daydate"
            android:background="@color/huwenak_brown"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_calendar"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/day_date"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Laporan Satu Hari"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/huwenak_brown">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Total : Rp.1.000.000.000"/>
    </LinearLayout>
</RelativeLayout>