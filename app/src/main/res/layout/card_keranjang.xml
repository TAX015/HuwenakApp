<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/huwenak_yellow"
        android:padding="15dp">

        <TextView
            android:id="@+id/cart_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/huwenak_brown"
            android:text="1/2 Oreo Cream Cheese + 1/2 Chocomaltine"/>

        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_name"
            android:textColor="@color/huwenak_brown"
            android:textSize="20sp"
            android:text="Rp.45.000"/>

        <EditText
            android:id="@+id/edt_cart"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@+id/cart_name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/huwenak_brown"
            android:background="@drawable/transaksi_edtborder"
            android:textSize="20sp"
            android:text="10"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnmin_cart"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_below="@+id/cart_name"
            android:layout_toStartOf="@+id/edt_cart"
            android:textColor="@color/white"
            android:text="-"
            android:background="@color/huwenak_brown"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnplus_cart"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_below="@+id/cart_name"
            android:layout_toEndOf="@+id/edt_cart"
            android:textColor="@color/white"
            android:text="+"
            android:background="@color/huwenak_brown"/>

        <TextView
            android:id="@+id/cart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_name"
            android:layout_alignParentEnd="true"
            android:textColor="@color/huwenak_brown"
            android:textSize="20sp"
            android:text="Rp.450.000"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>