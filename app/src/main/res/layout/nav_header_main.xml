<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/huwenak_brown"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Nama Pegawai"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FCC858"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:drawableStartCompat="@drawable/icon_nama" />

    <TextView
        android:id="@+id/head_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Cabang"
        android:textColor="#FCC858"
        app:drawableStartCompat="@drawable/icon_navcabang" />
</LinearLayout>